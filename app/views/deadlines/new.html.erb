<h2>Novo Prazo</h2>

<% if (@deadline.errors.any?) %>
  <p>Verifique os erros abaixo:</p>
    <ul>
      <% @deadline.errors.full_messages.each do |msg| %>
        <li><%= msg %> </li>
      <% end %>
    </ul>
<% end %>

<%= form_with(model: [@shipping_company, @deadline]) do |f| %>
  <div>
    <%= f.label :min_distance%>
    <%= f.number_field :min_distance, step: 0.01 %>
  </div>

  <div>
    <%= f.label :max_distance %>
    <%= f.number_field :max_distance, step: 0.01 %>
  </div>

  <div>
    <%= f.label :deadline_in_days %>
    <%= f.number_field :deadline_in_days, step: 0.01 %>
  </div>
  
  <div>
    <%= f.submit 'Enviar' %>
  </div>
<% end %>