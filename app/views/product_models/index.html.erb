      </tr>
      <tr>
        <th><%= ProductModel.human_attribute_name(:sku)%>: </th>
        <td><%= link_to product.sku, shipping_company_product_model_path(@shipping_company.id, product.id) %> </td>
      </tr>
      </table> 
    <% end %>
