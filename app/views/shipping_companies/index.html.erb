<section>
<% if admin_signed_in? %>
  <div>
    <%= link_to('Cadastrar Transportadora', new_shipping_company_path)%>
  </div>
  <h2>Transportadoras</h2>
  <% if @shipping_companies.any? %>
    <% @shipping_companies.each do |s| %>
      <table>
        <tr>
          <td><%= ShippingCompany.model_name.human %>: </td>
          <th><%= link_to(s.fantasy_name, shipping_company_path(s.id))%></th>
        </tr>
        <tr>
          <td><%= ShippingCompany.human_attribute_name(:cnpj)%>:</td>
          <th><%= s.cnpj %> </th>
        </tr>
      </table>
    <% end %>
  <% else %>
    <p>NÃ£o existem transportadoras cadastradas.</p>
  <% end %>
<% end %>
</section>