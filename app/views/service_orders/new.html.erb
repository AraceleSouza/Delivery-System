<h2>Registrar Pedido</h2>


<%= form_with(model: @service_order) do |f|%>
  <div>
    <%= f.label :shipping_company_id, 'Transportadora' %>
    <%= f.collection_select :shipping_company_id, @shipping_companies, :id, :corporate_name %>
  </div>

  <div>
    <%= f.label :vehicle_id, 'Modelo do veículo' %>
    <%= f.collection_select :vehicle_id, @vehicles, :id, :model %>
  </div>

  <div>
    <%= f.label :product_model_id, 'Código do produto' %>
    <%= f.collection_select :product_model_id, @product_models, :id, :sku %>
  </div>

  <div>
    <%= f.label :full_address, 'Endereço completo para retirada' %>
    <%= f.text_area :full_address %>
  </div>

  <div>
    <%= f.label :customer_address, 'Endereço do cliente' %>
    <%= f.text_area :customer_address %>
  </div>

  <div>
    <%= f.label :customer_name, 'Nome do cliente' %>
    <%= f.text_field :customer_name %>
  </div>

  <div>
    <%= f.label :estimated_delivery_date, 'Data prevista para entrega' %>
    <%= f.date_field :estimated_delivery_date %>
  </div>

  <div>
    <%= f.submit 'Gravar'%>
  </div>
<% end %>