<h2>Registrar Pedido</h2>

<% if (@service_order.errors.any?) %>
  <p>Verifique os erros abaixo:</p>
  <ul>
    <% @service_order.errors.full_messages.each do |msg| %>
    <li><%= msg %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @service_order) do |f|%>
  <div>
    <%= f.label :shipping_company_id%>
    <%= f.collection_select :shipping_company_id, @shipping_companies, :id, :corporate_name %>
  </div>

  <div>
    <%= f.label :vehicle_id %>
    <%= f.collection_select :vehicle_id, @vehicles, :id, :model %>
  </div>

  <div>
    <%= f.label :product_model_id %>
    <%= f.collection_select :product_model_id, @product_models, :id, :sku %>
  </div>

  <div>
    <%= f.label :full_address %>
    <%= f.text_area :full_address %>
  </div>

  <div>
    <%= f.label :customer_address %>
    <%= f.text_area :customer_address %>
  </div>

  <div>
    <%= f.label :customer_name %>
    <%= f.text_field :customer_name %>
  </div>

  <div>
    <%= f.label :estimated_delivery_date %>
    <%= f.date_field :estimated_delivery_date %>
  </div>
  
  <div>
    <%= f.submit 'Gravar'%>
  </div>

<% end %>