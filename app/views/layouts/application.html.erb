<!DOCTYPE html>
<html>
  <head>
    <title> DeliverySystem </title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
  </head>

  <body>
    <header>
      <h1> Sistema de Entregas </h1>
      <nav>
      <% if admin_signed_in? %>
        <p> Olá <%= current_admin.email %></p>
        <%= link_to "Sair", root_path %>
      <% else%>
        <%= link_to "Área do Admin", new_admin_session_path %>
      <% end %>
      </nav>
    </header>
    <main>
      <div>
       <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
      </div>
      <%= yield %>
    </main>
  </body>
</html>
